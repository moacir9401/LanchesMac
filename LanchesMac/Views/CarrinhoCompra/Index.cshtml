@model CarrinhoCompraViewModel

<div class="container">
    <div>
        <img src="~/images/Full-Cart-icon.png" width="30" height="35" />
        <h4>Seu carrinho de compras : </h4>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Quantidade</th>
                <th>Lanche</th>
                <th>Preço</th>
                <th>SubTotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CarrinhoCompra.CarrinhoCompraItems)
            {
                <tr>
                    <td class="text-center">@item.Quantidade</td>
                    <td class="text-center">@item.Lanche.Preco.ToString("C")</td>
                    <td class="text-center">(@item.Quantidade * *@item.Lanche.Preco).ToString("C")</td>
                    <td class="text-center">
                        <a asp-controller="CarrinhoCompra" asp-action="RemoverItemDoCarrinhoCompra"
                       asp-route-lancheId="@item.Lanche.LancheId"><img src="~/images/remove.ico" width="10px" height="10px" /></a>
                    </td>
                </tr>
            }
        </tbody>

        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total:</td>
                <td class="text-right">@Model.CarrinhoCompraTotal.ToString("c")</td>
            </tr>
        </tfoot>
    </table>

    <div class="text-right">
        <div class="btn-group">
            <a class="btn btn-success" asp-controller="Pedido" asp-action="Checkout">Encerrar Pedido</a>
            <a class="btn btn-primary" asp-controller="Lanche" asp-action="List">Comprando</a>
        </div>
    </div>
</div>